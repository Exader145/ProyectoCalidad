
@{Layout = "~/Views/Shared/_LayoutSys.cshtml"; }

<h2>FormularioModificar</h2>

<div class="row">

    <div class="col-md-6 col-md-offset-3">

        <form action="/Admin/Actualizar" method="post">

            <input name="idUsuario" value="@Model.idUsuario" style="visibility:hidden"/>

            <div class="form-group">
                <label>Nombre</label>
                <input id="txtNombre" class="form-control" name="nombre" value="@Model.nombre" required/>
            </div>

            <div class="form-group">
                <label>Correo Electronico</label>
                <input id="txtCorreo" class="form-control" name="correoElectronico" value="@Model.correoElectronico" required/>
            </div>
            <div class="form-group">
                <label>contraseña</label>
                <input id="txtContraseña" class="form-control" name="contraseña" value="@Model.contraseña" required/>
            </div>

            <button id="btnGuardarAdministrador" class="btn-danger">Guardar</button>

        </form>
    </div>

</div>