
@{
Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title ="Nuevo Usuario";
    }
<div class="row">

    <div class="col-md-6 col-md-offset-3">

        <form action="/Usuario/GuardarUsuario" method="post">

            <h3>Registro de Usuario</h3>
            <hr />

            <div class="form-group">
                <label>Nombre</label>
                <input id="txtNombre" class="form-control" name="nombre" value="@Model.nombre" required />
            </div>

            <div class="form-group">
                <label>Correo Electronico</label>
                <input id="txtCorreo" class="form-control" name="correoElectronico" value="@Model.correoElectronico" type="email" required />
            </div>

            <div class="form-group">
                <label>contraseña</label>
                <input id="txtPassword" class="form-control" type="password" name="contraseña" value="@Model.contraseña" required/>
            </div>

            <button id="btnRegistrarUsuario" class="btn-danger">Guardar</button>

        </form>
    </div>

</div>

