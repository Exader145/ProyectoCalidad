
@{Layout = "~/Views/Shared/_LayoutSys.cshtml"; }

<div class="row">

    <div class="col-md-6 col-md-offset-3">

        <form action="/Cancion/agregarSys" method="post">

            <h3>Registro de canción</h3>
            <hr />

            <div class="form-group">
                <label>Nombre de canción</label>
                <input id="txtNombre" class="form-control" name="nombre" value="@Model.nombre" />
                @Html.ValidationMessage("Nombre")
            </div>

            <div class="form-group">
                <label>Nombre de artista</label>
                <input id="txtArtista" class="form-control" name="artista" value="@Model.artista" />
                @Html.ValidationMessage("Artista")
            </div>

            <div class="form-group">
                <label>Nombre de álbum</label>
                <input id="txtAlbum" class="form-control" name="album" value="@Model.album" />
                @Html.ValidationMessage("Album")
            </div>

            <div class="form-group">
                <label>Género</label>
                <input id="txtGenero" class="form-control" name="genero" value="@Model.genero" />
                @Html.ValidationMessage("Genero")
            </div>

            <div class="form-group">
                <label>Duración de canción</label>
                <input id="txtDuracion" class="form-control" name="duracionCancion" value="@Model.duracionCancion" />
                @Html.ValidationMessage("Duracion")
            </div>

            <div class="form-group">
                <label>Fecha de lanzamiento</label>
                <input id="txtFechaLanzamiento" class="form-control" type="date" name="fechaLanzamiento" value="@Model.fechaLanzamiento" />
                @Html.ValidationMessage("FechaLanzamiento")
            </div>

            <div class="form-group">
                <label>Nombre de imagen</label>
                <input id="txtImagen" class="form-control" name="imagen" value="@Model.imagen" />
            </div>

            <button id="btnGuardar" class="btn-danger">Guardar</button>

        </form>
    </div>

</div>

