
@{Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<div class="row">

    <div class="col-md-6 col-md-offset-3">

        <form action="/Cancion/actualizar?idCancion=@Model.idCancion" method="post">

            <h3>Modificar Canción</h3>
            <hr />

            <div class="form-group">
                <label>Nombre de canción</label>
                <input id="txtNombre" class="form-control" name="nombre" value="@Model.nombre" required />
                @Html.ValidationMessage("nombre", new { style = "color: Red" })
            </div>

            <div class="form-group">
                <label>Nombre de artista</label>
                <input id="txtArtista" class="form-control" name="artista" value="@Model.artista" required />
            </div>
            <div class="form-group">
                <label>Nombre de álbum</label>
                <input id="txtAlbum" class="form-control" name="album" value="@Model.album" required />
            </div>
            <div class="form-group">
                <label>Género</label>
                <input id="txtGenero" class="form-control" name="genero" value="@Model.genero" required />
            </div>
            <div class="form-group">
                <label>Duración de canción</label>
                <input id="txtDuracion" class="form-control" name="duracionCancion" value="@Model.duracionCancion" required />
            </div>
            <div class="form-group">
                <label>Fecha de lanzamiento</label>
                <input id="txtFechaLanzamiento" class="form-control" name="fechaLanzamiento" value="@Model.fechaLanzamiento" required />
            </div>
            <div class="form-group">
                <label>Nombre de imagen</label>
                <input id="txtImagen" class="form-control" name="imagen" value="@Model.imagen" required />
            </div>

            <button id="btnModificar" class="btn-danger">Actualizar</button>

        </form>
    </div>

</div>

